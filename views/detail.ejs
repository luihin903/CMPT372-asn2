<!DOCTYPE html>
<html lang = "en">

    <head>
        <meta charset = "UTF-8">
        <title><%= recipe.title %></title>
        <!-- some routing and parameter problems occur if I use extended css and js files -->
        <style>
            html {
                font-family: Arial, Helvetica, sans-serif;
            }
            form {
                width: 50%;
                border: 1px solid black;
                border-radius: 8px;
                margin: auto;
                margin-top: 16px;
                padding: 16px;
            }
            button {
                background-color: white;
                width: 97%;
                border-radius: 8px;
                font-size: 16px;
                margin: 8px;
                cursor: pointer;
            }

        </style>

    </head>

    <body>

        <header>
            <a href = "/" style = "position: fixed; font-size: 32px;">&#8592;Recipe App</a>
        </header>

        <form>

            <h1><%= recipe.title %></h1>
            <br>
            <p>Last Modified: <%= time %></p>
            <br>
            <h3>Ingredients:</h3>
            <table>
                <% ingredients.forEach(function(ingredient) { %>
                    <tr>
                        <td><%= ingredient.step %>. </td>
                        <td><%= ingredient.name %></td>
                        <td>: <%= ingredient.amount %></td>
                    </tr>
                <% }) %>
            </table>
            <br>
            <h3>Directions</h3>
            <table>
                <% directions.forEach(function(direction) { %>
                    <tr>
                        <td><%= direction.step %>. </td>
                        <td><%= direction.content %></td>
                    </tr>
                <% }) %>
            </table>
            <br>

            <a href = "/delete/<%= recipe.id %>"><button type = "button" style = "border: 1px solid red; color: red;">DELETE</button></a>
            <a href = "/edit/<%= recipe.id %>"><button type = "button" style = "border: 1px solid blue; color: blue;">EDIT</button></a>

        </form>

    </body>

</html>